extends layout

block content
  h1 Build your profile.
  form(action="/users/profile", method="post")
    h2 Up to 10 repos will be included in your profile.
    .visibility
      h2 Choose your privacy when parsing.
      ul.formlist
        li
          label #[input(type="radio", name="visibility", value="visibility=public", required="required")] #[span Public repositories only]
        li
          label #[input(type="radio", name="visibility", value="visibility=private")] #[span Private repositories only]
        li
          label #[input(type="radio", name="visibility", value="visibility=all")] #[span Public and private repositories]
    .affiliation
      h2 Choose your repo affiliation.
      ul.formlist
        li
          label #[input(type="checkbox", name="affiliation", value="owner")] #[span Repos you own]
        li
          label #[input(type="checkbox", name="affiliation", value="collaborator")] #[span Repos you've contributed to]
    .sort
      h2 Choose your repo order.
      ul.formlist
        li
          label #[input(type="radio", name="sort", value="sort=created&direction=desc", required="required")] #[span Most recently created repos]
        li
          label #[input(type="radio", name="sort", value="sort=created&direction=asc")] #[span Earliest created repos]
        li
          label #[input(type="radio", name="sort", value="sort=full_name&direction=asc")] #[span Alphabetical order]
        li
          label #[input(type="radio", name="sort", value="sort=updated&direction=desc")] #[span Most recently updated]
    input#submit(type="submit", value="Submit")
    